program run_ARCHIVE

  implicit none

  arch :: ARCHIVE
  themat :: MAT{REAL}*
  i,j :: INT

  tonto.initialize

  stdin.create_stdin
  stdin.open
  stdout.create_stdout
  stdout.open

  themat.create(100,100)

  do j=1,100
    do i=1,100
      themat(i,j) = (50-i)**2+(50-j)**2
    end
  end

  arch.set(root_name="myfile",name="")
  arch.write_ppm(themat)

  themat.destroy

  tonto.report

end
