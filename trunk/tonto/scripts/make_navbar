#!/bin/csh -f
#
# This script makes the TONTO-nav-bar.html from the .html files.
#
# ! $Id$
#
#*******************************************************************************

echo '<HTML>'
echo '<HEAD>'
echo '  <META HTTP-EQUIV="Content-Type" CONTENT="text/html; charset=iso-8859-1">'
echo '  <META name="robots" content="noindex, nofollow">'
echo '  <TITLE>Tonto Navigation</TITLE>'
echo '<BASE TARGET="main">'
echo '</HEAD>'
echo '<body BGCOLOR="#FFFBF0">'
echo '<BR>'
echo '<DIV ALIGN=CENTER>'
echo '</A><IMG SRC="htmldocs/tonto_nav.gif" HEIGHT=61 WIDTH=113 BORDER="1"></A>'
echo '<DL COMPACT>'

echo '<BR>'
echo '<HR NOSHADE WIDTH=80%>'
echo '      <DT><A HREF="htmldocs/index.html">What is TONTO?</A>'
echo '      <DT><A HREF="foofiles">.foo source files</A>'
echo '      <DT><A HREF="f90files">.f90 source files</A>'

echo '<BR>'
echo '<HR NOSHADE WIDTH=80%>'
echo '<BR>SCRIPTS AND UTILITIES<BR><BR>'
echo '      <DT><A HREF="scripts/configure.html">configure</A>
echo '      <DT><A HREF="scripts/Makefile.html">Makefile</A>
echo '      <DT><A HREF="scripts/macros.html">macros</A>'
echo '      <DT><A HREF="scripts/foo.perl.html">foo.perl</A>'
echo '      <DT><A HREF="scripts/foo2html.perl.html">foo2html.perl</A>'
echo '      <DT><A HREF="scripts/make_deps.perl.html">make_deps.perl</A>'
echo '      <DT><A HREF="scripts/make_dist.html">make_dist</A>'
echo '      <DT><A HREF="scripts/update_module_file.html">update_module_file</A>'
echo '<BR>'
echo '<HR NOSHADE WIDTH=80%>'
echo '<BR>MODULES<BR><BR>'

foreach i ($argv) 
   echo '<DT><A HREF="htmlfiles/'$i'_short.html">'$i'</A> <A HREF="foofiles/'$i'.foo">.foo</A>'
end

echo '</DL>'
echo '</DIV>'
echo '</BODY>'
echo '</HTML>'
