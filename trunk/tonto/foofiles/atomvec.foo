   put_vrml(filename)
   ! Put vrml version of the atomvec to file "filename".
     filename :: STR(*)
     out :: TEXTFILE*
     word :: STR
     sx,sy,hx,hy :: BIN
     x_atom_1,x_atom_2,y_atom_1,y_atom_2,x :: INT
     origin,x_axis,y_axis,z_axis :: REALVEC(3)
     rot_mat :: REALMAT(3,3)
     dot :: REAL

     rot_mat.to_unit_mat         ! to rotate the coordinates so that z vector
                                 ! coincides with 0,0,1.
     origin = .centre_of_mass    ! centre of the picture.
     sx=FALSE ! whether user has specified x atoms
     sy=FALSE
     hx=FALSE ! whether have x axis specified
     hy=FALSE
     x_axis = (/1,0,0/)
     y_axis = (/0,1,0/)

     do
       stdin.read(word)
       word.to_lower_case
       select case (word)
         case("end          ");         exit
         case("position=    ");         stdin.read(origin)
         case("origin=      ");         stdin.read(origin)
         case("centre=      ");         stdin.read(origin)
         case("centre_atom= ");         stdin.read(x)
              ENSURE(x>0 AND x<=.n_atom,"centre_atom outside valid range")
                                        origin = self(x).pos
         case("x_axis_atoms=");         stdin.read(x_atom_1)
                                        stdin.read(x_atom_2)
                                        sx=TRUE
         case("y_axis_atoms=");         stdin.read(y_atom_1)
                                        stdin.read(y_atom_2)
                                        sy=TRUE
         case("x_axis=      ");         stdin.read(x_axis)
                                        hx=TRUE
         case("y_axis=      ");         stdin.read(y_axis)
                                        hy=TRUE
         case default;   UNKNOWN(word)
       end
     end

     if ((NOT hx) AND sx) then
       ENSURE(max(x_atom_1,x_atom_2)<=.n_atom,"x atom index out of bounds")
       x_axis = self(x_atom_2).pos - self(x_atom_1).pos
       x_axis.normalise
     end
     if ((NOT hy) AND sy) then
       ENSURE(max(y_atom_1,y_atom_2)<=.n_atom,"y atom index out of bounds")
       y_axis = self(y_atom_2).pos - self(y_atom_1).pos
       y_axis.normalise
     end
     if ((hy OR sy) AND NOT (hx OR sx)) then ! have y but not x.
       if (dot_product(x_axis,y_axis)<TOL(3)) x_axis = (/0,0,1/)
       dot = dot_product(x_axis,y_axis)     ! Orthogonalise x_axis to y_axis
       x_axis = x_axis - dot*y_axis
       x_axis.normalise
     end
     if (hx OR sx) then ! have x.
       if (dot_product(x_axis,y_axis)<TOL(3)) y_axis = (/0,0,1/)
       dot = dot_product(x_axis,y_axis)     ! Orthogonalise y_axis to x_axis
       y_axis = y_axis - dot*x_axis
       y_axis.normalise
     end

     z_axis.to_cross_product(x_axis,y_axis)
     rot_mat(1,:) = x_axis
     rot_mat(2,:) = y_axis
     rot_mat(3,:) = z_axis

     out.create(filename)
     out.open(for="write")
     out.set_dbl_precision(3)
     out.set_dbl_width(10)

     stdout.text("Making VRML molecule...")
     stdout.show("Origin =               ",origin)
     stdout.show("Rotation matrix =      ",rot_mat(1,:))
     stdout.show("                       ",rot_mat(2,:))
     stdout.show("                       ",rot_mat(3,:))
     .put_vrml_header(out)
     .put_vrml_atoms(out,rot_mat,origin)
     .put_vrml_bonds(out,rot_mat,origin)
     stdout.flush(2)
     out.destroy
   end

