   resolve_axis_system(crystal)
   ! Change the atom axis systems to cartesian, from crystal, if required.
      crystal :: CRYSTAL, IN
       a :: INT
      do a = 1,.n_atom
         self(a).resolve_axis_system(crystal)
      end
   end

   change_axis_system_to(kind,crystal)
