!  ============
!  Set routines
!  ============

   set_defaults ::: get_from(VEC{OBJECT}, leaky
   ! Set default values
   end

   set_h(h) ::: pure
   ! Set the h indices
      self :: INOUT
      h :: VEC{INT}, IN

      i :: INT

      do i = 1,.dim
         self(i).h = h(i)
      end

   end

   set_k(k) ::: pure
   ! Set the k indices
      self :: INOUT
      k :: VEC{INT}, IN

      i :: INT

      do i = 1,.dim
         self(i).k = k(i)
      end

   end

   set_l(l) ::: pure
   ! Set the l indices
      self :: INOUT
      l :: VEC{INT}, IN

      i :: INT

      do i = 1,.dim
         self(i).l = l(i)
      end

   end


   set_F_calc(F_calc) ::: pure
   ! Set the calculated structure factors
   ! Also set calculated intensities.
      self :: INOUT
      F_calc :: VEC{CPX}, IN

      n :: INT
      val :: CPX

      do n = 1,.dim
         val = F_calc(n)
         self(n).F_calc = val
         self(n).I_calc = abs(val)**2
      end

   end

   set_F_pred(F_pred) ::: pure
   ! Set the predicted structure factors
   ! Also set predicted intensities.
      self :: INOUT
      F_pred :: VEC{REAL}, IN

      n :: INT
      val :: REAL

      do n = 1,.dim
         val = F_pred(n)
         self(n).F_pred = val
         self(n).I_pred = val * val
      end

   end

   set_F_exp(F_exp) ::: pure
   ! Set the experimental structure factors
      self :: INOUT
      F_exp :: VEC{REAL}, IN

      n :: INT

      do n = 1,.dim
         self(n).F_exp = F_exp(n)
      end

   end

   set_F_sigma(F_sigma) ::: pure
   ! Set the experimental structure factor errors
      self :: INOUT
      F_sigma :: VEC{REAL}, IN

      n :: INT

      do n = 1,.dim
         self(n).F_sigma = F_sigma(n)
      end

   end


   set_I_calc(I_calc) ::: pure
   ! Set the calculated intensities
      self :: INOUT
      I_calc :: VEC{REAL}, IN

   ENSURE(I_calc.dim==.dim,"I_calc: wrong size")

      n :: INT

      do n = 1,.dim
         self(n).I_calc = I_calc(n)
      end

   end

   set_I_pred(I_pred) ::: pure
   ! Set the predicted intensities
      self :: INOUT
      I_pred :: VEC{REAL}, IN

      n :: INT

      do n = 1,.dim
         self(n).I_pred = I_pred(n)
      end

   end

   set_I_exp(I_exp) ::: pure
   ! Set the experimental intensities
      self :: INOUT
      I_exp :: VEC{REAL}, IN

      n :: INT

      do n = 1,.dim
         self(n).I_exp = I_exp(n)
      end

   end

   set_I_sigma(I_sigma) ::: pure
   ! Set the experimental intensity errors
      self :: INOUT
      I_sigma :: VEC{REAL}, IN

      n :: INT

      do n = 1,.dim
         self(n).I_sigma = I_sigma(n)
      end

   end


   scale_F_exp(fac) ::: pure
   ! Scale the experimental structure factors
      self :: INOUT
      fac :: REAL, IN

      n :: INT

      do n = 1,.dim
         self(n).F_exp = self(n).F_exp * fac
      end
   
   end

   scale_F_sigma(fac) ::: pure
   ! Scale the experimental structure factor errors
      self :: INOUT
      fac :: REAL, IN

      n :: INT

      do n = 1,.dim
         self(n).F_sigma = self(n).F_sigma * fac
      end

   end


   scale_I_exp(fac) ::: pure
   ! Scale the experimental intensities
      self :: INOUT
      fac :: REAL, IN

      n :: INT

      do n = 1,.dim
         self(n).F_exp = self(n).F_exp * fac
      end

   end

   scale_I_sigma(fac) ::: pure
   ! Scale the experimental intensity errors
      self :: INOUT
      fac :: REAL, IN

      n :: INT

      do n = 1,size(self)
         self(n).F_sigma = self(n).F_sigma * fac
      end

   end


