      ! Set data, headings, subheadings
      data.create(.dim,3)
      head.create(3)
      subh.create(3)

      data(:,1) = RE(.F_calc); head(1) = "Calc"; subh(1) = "Real"
      data(:,2) = IM(.F_calc); head(2) = "Calc"; subh(2) = "Imag"
      data(:,3) = .F_pred;     head(3) = "Pred"; subh(3) = " "

