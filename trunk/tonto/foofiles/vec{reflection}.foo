      h :: VEC{INT}, IN

      i :: INT

      do i = 1,.dim
         self(i).h = h(i)
      end

   end

   set_k(k) ::: pure
   ! Set the k indices
      self :: OUT
      k :: VEC{INT}, IN

      i :: INT

      do i = 1,.dim
         self(i).k = k(i)
      end

   end

   set_l(l) ::: pure
   ! Set the l indices
      self :: OUT
      l :: VEC{INT}, IN

      i :: INT

      do i = 1,.dim
         self(i).l = l(i)
      end

   end

   set_calc_to(v) ::: pure
   ! Set the complex calculated structure factors to "v"
      self :: OUT
      v :: VEC{CPX}, IN

      self(:).calc = v

   end

   set_pred_to(v) ::: pure
   ! Set the predicted intensities to "v"
      self :: OUT
      v :: VEC{REAL}, IN

      self(:).pred = v

   end

   set_cal_to_abs_calc ::: pure
   ! Set the real calculated observations (i.e. those without
   ! experimental corrections) to the absolute value of the
   ! calculated complex values.
      self :: INOUT
      v :: VEC{REAL}, IN

      self(:).cal = abs(self(:).calc) 

   end

   set_cal_to_abs_calc_2 ::: pure
   ! Set the real calculated observations (i.e. those without
   ! experimental corrections) to the *square* of the absolute value
   ! of the calculated complex values.
      self :: INOUT
      v :: VEC{REAL}, IN

      self(:).cal = self(:).calc * conjg(self(:).calc) 

   end

   set_obs_to(v) ::: pure
   ! Set the observed reflection data to "v"
      self :: INOUT
      v :: VEC{REAL}, IN

      self(:).obd = v

   end

   set_sigma_to(v) ::: pure
   ! Set all the experimental sigma's to "v"
      self :: INOUT
      v :: VEC{REAL}, IN

      self(:).sigma = v

   end

