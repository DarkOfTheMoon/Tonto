      v :: VEC{REAL}, IN

      n :: INT

      do n = 1,.dim
         v(n) = self(n).sigma
      end

   end

   put_cal_to(v) ::: pure
   ! Put the uncorrected calculated real observations to "v".
      self :: INOUT
      v :: VEC{REAL}, IN

      n :: INT

      do n = 1,.dim
         v(n) = self(n).cal
      end

   end

   put_pred_to(v) ::: pure
