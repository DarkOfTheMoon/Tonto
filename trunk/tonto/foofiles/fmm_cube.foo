module FMM_CUBE

  implicit none

  contains

   create ::: get_from(OBJECT), leaky
   ! Create an object
   end

   destroy ::: get_from(OBJECT), leaky
   ! Destroy an object
   end

   nullify_ptr_part
   ! Nullify the pointer parts of the type.
     i :: INT
     nullify(.atomlist)
     nullify(.child)
   end
 
   destroy_ptr_part ::: leaky
   ! Destroy the pointer parts of the type.
     i :: INT
     .atomlist.destroy
     ! We can't do child.destroy, because that would be recursive modules.
     do i=1,.child.dim
       .child(i).destroy
     end
   end
 
   set_defaults
   ! Set default values for parts of the type.
     .width = ZERO
     .n_atoms = 0
     .centre = (/ZERO,ZERO,ZERO/)
   end

end
