   write_buffered(matvec)
   ! Writes the mat to the buffer, and writes buffer to disk when full.
     matvec :: VEC{MAT_{REAL}}, IN
     b,bsize :: INT
     bsize=size(matvec)
     do b=1,bsize
       .write_buffered(matvec(b).element)
     end
