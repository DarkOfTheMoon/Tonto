   read(value) ::: template
   ! Read a "value" from the file.
      value :: VALUE_TYPE
      if (.buffered) then
       .read_buffered(value)
      else
       if (IO_IS_ALLOWED) then
         read(unit=.unit,iostat=.io_status) value
       end
       ENSURE(.io_status==0,"read error, error="// trim(.io_status.to_str))
       .record = .record + 1
      end
   end

