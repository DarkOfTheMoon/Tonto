   read_buffered(values) ::: template
   ! Reads the multidimensional "values" from the buffer.
      values :: ARR{VALUE}, OUT
      tmp :: VEC{VALUE}*
      tmp.create(values.dim)
      .read_buffered(tmp)
      values = reshape(tmp,shape(values))
      tmp.destroy
