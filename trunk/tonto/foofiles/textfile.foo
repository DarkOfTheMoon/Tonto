   ! if present, flush is how many times to flush the buffer.
      string :: STR, IN
      int_width :: BIN, IN, optional
      width,flush :: INT, IN, optional
   ENSURE(NOT (present(int_width) AND present(width)),"too many widths")
      form :: STR
