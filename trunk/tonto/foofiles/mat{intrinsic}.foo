   set_from_diagonal(d)
   ! Converts the diagonal vector "d" to matrix "self".
      d :: D_TYPE
   ENSURE(.is_square,"non-square matrix")
   ENSURE(d.dim==.dim1,"incompatibale diagonal length")
      i :: INT
      self = ZERO
      do i = 1,d.dim
         self(i,i) = d(i)
      end
   end

   set_diagonal_to(d)
   ! Set the diagonal of "self" to th diagonal vector "d"
      d :: D_TYPE
   ENSURE(.is_square,"non-square matrix")
   ENSURE(d.dim==.dim1,"incompatibale diagonal length")
      i :: INT
      do i = 1,d.dim
