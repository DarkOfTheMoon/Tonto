   end

   alpha_set_to(X)
   ! Set the alpha sector of the vector
      X :: VEC{REAL}
   ENSURE(.dim.is_even,"self is not even-dimensioned")
   ENSURE(X.dim==.dim/2,"wrong size, X")
      n :: INT
      n = size(self)/2
      self(1:n) = X
   end

   beta_set_to(X)
   ! Set the beta sector of the vector
       X :: VEC{REAL}
   ENSURE(.dim.is_even,"self is not even-dimensioned")
   ENSURE(X.dim==.dim/2,"wrong size, X")
      n :: INT
      n = size(self)/2
      self(n+1:2*n) = X
   end

