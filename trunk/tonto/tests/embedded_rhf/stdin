{
    ! TONTO input file for generating initial cluster
 
    basis_directory= "./basis_sets"
    basis_kind= STO-3G
 
    CIF_file_name= "tests/nh3.cif"
    CIF_data_block_name= nh3
    process_CIF

    put
 
    cluster= {
        fragment_geometry= {
           2.038909    2.038909    2.038909    !  N
           3.608568    2.546939    1.079080    !  H
           1.079080    3.608568    2.546939    !  H
           2.546939    1.079080    3.608568    !  H
        }
        add_criteria= within_radius
        defragment= TRUE
        radius= 4 Angstrom
        make_info
        put
    }
 
    put

    scfdata= {
       initial_guess=   promolecule
       kind=            rhf
       direct=          on
       convergence=       0.00001
       diis_convergence=  0.00001
       diis=            on
    }
    
    scf

    create_cluster

    dftgrid= {
       radial_grid_order= 3
       spherical_grid_order= 9
       radial_grid_order= 50
       spherical_grid_order= 25
    }

    scfdata= {
       initial_guess=   atom
       kind=            embedded_rhf
       direct=          on
       convergence=       0.0001
       diis_convergence=  0.0001
       diis=            off
       diis_keep=      12 
       use_rough_convergence= no
       kappa= 10000
    }

    scf

}
