{

   name=     HCl
   
   output_style_options= {
      real_precision= 4
   }
   
   basis_directory= .
   basis_name= reiher++.bas
   
   charge=   0
   multiplicity= 1
   
   atoms= {

      keys= { label= { units= angstrom } pos= }

      data= {
        Cl     0.000000    0.000000    0.000000
        H      1.274524    0.000000    0.000000
      }

   }

   put


   scfdata= {

      ! a douglas-kroll-hess calculation
      ! more detail on the DKH calculation see Ar_rhf_DKH and Ar_gchf_DKH tests
      relativity_kind= dkh
      ! this is default true
      use_DK1= TRUE
      use_DK2= TRUE
      ! the 3rd order dkh level is not turned on
!      use_DK3= FALSE
      ! PCE is turned on
      use_pce_corr= TRUE 
      use_DK1_pce= TRUE
      use_DK2_pce= TRUE

  !   initial_density= promolecule 
      initial_density= core 
  !   initial_density= unrestricted

      kind=            rhf

      direct=          on

      convergence= 0.00000001
      max_iterations= 20
      diis= { convergence_tolerance= 0.000001 }
      delete_scf_archives= NO
     
   }
   
   scf
   put_mo_energies
! make_natural_orbitals
   read_archive molecular_orbitals restricted  
   assign_nos_to_mos

  plot_grid= {
     kind= electron_density
     centre_atom= 1 
     x_axis=  1.000000  0.000000  0.000000
     y_axis=  0.000000  1.000000  0.000000
     x_points= 21
!     y_points= 1
     x_width= 0.03779454
     y_width= 0.0
     plot_format= gnuplot
   }
   plot

   delete_scf_archives
   delete_scf_integrals

}
