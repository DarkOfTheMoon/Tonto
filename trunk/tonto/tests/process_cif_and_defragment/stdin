{
    ! TONTO input file for generating initial cluster
 
    basis_directory= "./basis_sets"
 
    CIF= {
       file_name= "urea.cif"
       data_block_name= "urea"
       CH_bond_length= 1.083 angstrom
       NH_bond_length= 1.009 angstrom
       OH_bond_length= 0.983 angstrom
    }
    process_CIF
 
    cluster= {
        fragment_geometry= {
           0.000000    5.280839    2.912578    !  C
           0.000000    5.280839    5.290193    !  O
           1.528275    6.809114    1.582711    !  N
           2.699459    7.980299    2.527320    !  H
           1.507962    6.788801    -0.323806    !  H
        } 
        generation_method= fragment
        defragment= TRUE
        radius= 0 Angstrom
        make_info
        put
    }
    CX_file_name= "urea.cxd"
    put_CX_data
 
}
