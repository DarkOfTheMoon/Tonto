{
   
    output_style_options= {
       real_precision= 4
    }
 
    basis_set_directory= "./basis_sets"
    basis_set_kind= "Clementi-Roetti"
 
    CIF= {
       file_name= "urea.cif"
       data_block_name= "urea"
       CH_bond_length= 1.083 angstrom
       NH_bond_length= 1.009 angstrom
       OH_bond_length= 0.983 angstrom
    }
    process_CIF
 
 
    cluster= {
 
        fragment_geometry= {
           0.000000    5.280839    2.912578    !  C
           0.000000    5.280839    5.290193    !  O
           1.528275    6.809114    1.582711    !  N
           2.699459    7.980299    2.527320    !  H
           1.507962    6.788801    -0.323806    !  H
           -1.528275    3.752564    1.582711    !  N
           -2.699459    2.581380    2.527320    !  H
           -1.507962    3.772877    -0.323806    !  H
        } 
 
        generation_method= for_hirshfeld_surface
        atom_density_cutoff= 1.0e-7
 
        defragment= FALSE
 
        make_info
    }
 
 
    create_cluster
 
 
    put
 
 
    CX_surface= {
 
        kind= Stockholder_density
        triangulation_method= recursive_marching_cube
        iso_value= 0.5
        big_interior= yes
 
        plotgrid= {
           box_scale_factor= 0.75
           use_bounding_cube_and_axes
           desired_separation= 0.5
           put
        }
 
    }
 
    isosurface_plot
 
 
    CX_file_name= "urea.cxs"
    put_CX_data 
 
 
    destroy_cluster
 
}
