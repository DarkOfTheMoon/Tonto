  make_qq_plot_grid(grid,h,k,l)
  ! Make the grid for the Q-Q plot, which is a plot of the deviations X-Y
  ! versus the expected deviations, assuming that the expected devaitions
  ! are normally distributed. grid(1,:) contains the expected deviation d0j,
  ! grid(2,:) contains actual deviation dj.
    MAT, target :: grid
    VEC, PTR :: d,e
    IVEC :: h,k,l
    DBL :: temp
    INT :: n,i,j
    n = .n_refl
    ENSURE(size(grid,1)==n, "grid wrong size")
    ENSURE(size(grid,2)==2, "grid wrong size")
    d => grid(:,2)
    d(:)  = (.F_exp - .F_pred(:)) * sign(ONE,real(.F_calc)) /.sigma(:)
    do i=1,n-1                   ! sort array from lowest to highest
      do j=i+1,n
        if (d(j) < d(i)) then
          d.swap_elements(i,j)
          h.swap_elements(i,j)
          k.swap_elements(i,j)
          l.swap_elements(i,j)
        end
      end
    end
    e => grid(:,1)
    do j=1,n                         ! expected quantile, d0j
      temp = (TWO*(n-j)+ONE)/(TWO*n) ! cumulative probability
      e(n-j+1) = temp.z_from_p
    end
  end

  put_chi2_vs_angle_plot
  ! Output a table with the chi^2 for the structure factor data set broken
  ! into sections.
  ! Reads from stdin the number of divisions in the plot.
    INT :: num_sections
    INT :: n,num,k
    MAT(3,3) :: rcm
    IVEC( .n_refl ) :: section_for
    DBL :: kx,ky,kz,stl,stl_min,stl_max,chi2,width,stl_mean

    stdin.read(num_sections)
    ENSURE(num_sections > 0, "number of sections to plot not positive")
    ENSURE(.F_pred.created,"no predicted structure factors")
    rcm = .reciprocal_cell_matrix

    ! Work out the limits of the sin(theta)/lambda.
    stl_min = 1000
    stl_max = ZERO
    do n=1, .n_refl
      kx = rcm(1,1) * .h(n) + rcm(1,2) * .k(n) + rcm(1,3) * .l(n)
      ky = rcm(2,1) * .h(n) + rcm(2,2) * .k(n) + rcm(2,3) * .l(n)
      kz = rcm(3,1) * .h(n) + rcm(3,2) * .k(n) + rcm(3,3) * .l(n)
      stl = HALF*sqrt(kx*kx+ky*ky+kz*kz)*BOHR_PER_ANGSTROM
      if (stl < stl_min) stl_min = stl
      if (stl > stl_max) stl_max = stl
    end
    width = (TOL(3) + stl_max - stl_min)/num_sections

    ! Determine which section each reflection belongs to.
    do n=1, .n_refl
      kx = rcm(1,1) * .h(n) + rcm(1,2) * .k(n) + rcm(1,3) * .l(n)
      ky = rcm(2,1) * .h(n) + rcm(2,2) * .k(n) + rcm(2,3) * .l(n)
      kz = rcm(3,1) * .h(n) + rcm(3,2) * .k(n) + rcm(3,3) * .l(n)
      stl = HALF*sqrt(kx*kx+ky*ky+kz*kz)*BOHR_PER_ANGSTROM
      section_for(n) = ceiling((TOL(3) + stl - stl_min) / width)
    end

    stdout.flush
    stdout.text("Chi^2 vs angle plot")
    stdout.flush
    stdout.text("sin(theta)/lambda in Angstrom^(-1)")
    stdout.show("Smallest sin(theta)/lambda  = ",stl_min)
    stdout.show("Largest sin(theta)/lambda   = ",stl_max)
    stdout.flush
    stdout.put("stl")
    stdout.put("chi^2",flush=1)
    stdout.dash(dbl_fields=2)
    do n = 1, num_sections
      chi2 = ZERO
      num = 0
      stl_mean = stl_min + (n - HALF) * width
      do k = 1, .n_refl
        if (n==section_for(k)) then
          chi2 = chi2 + ((.F_pred(k) - .F_exp(k)) / .sigma(k))**2
          num = num + 1
        end
      end
      stdout.put(stl_mean)
      if (num==0) then
        stdout.flush
        cycle
      else
        chi2 = chi2 / max(num - .n_param,1)
        stdout.put(chi2,flush=1)
      end
    end
    stdout.flush
  end

  put_fcalc_plots
  ! Output some different plots about the calculated structure factors.
    MAT(3,3) :: rcm
    VEC, PTR :: z,stl,ext
    INT :: n
    DBL :: kx,ky,kz,x,y,w

    rcm = .reciprocal_cell_matrix

    z.create(.n_refl)
    stl.create(.n_refl)
    ext.create(.n_refl)

    z(:)  = (.F_exp(:) - .F_pred(:)) * sign(ONE,real(.F_calc(:))) /.sigma(:)
    do n=1,.n_refl
      kx = rcm(1,1) * .h(n) + rcm(1,2) * .k(n) + rcm(1,3) * .l(n)
      ky = rcm(2,1) * .h(n) + rcm(2,2) * .k(n) + rcm(2,3) * .l(n)
      kz = rcm(3,1) * .h(n) + rcm(3,2) * .k(n) + rcm(3,3) * .l(n)
      stl(n) = HALF*sqrt(kx*kx+ky*ky+kz*kz)
    end
    ext = .extinction_correction

    stdout.text("The effects of angle.")
    stdout.text("Scatter plot of (Fexp-Fpred)/sigma vs sin(theta)/lambda")
    do n=1,.n_refl
      stdout.put(stl(n))
      stdout.put(z(n))
      stdout.flush
    end
    stdout.flush

    stdout.text("The effects of intensity.")
    stdout.text("Scatter plot of (Fexp-Fpred)/sigma vs Fexp")
    do n=1,.n_refl
      stdout.put(.F_exp(n))
      stdout.put(z(n))
      stdout.flush
    end
    stdout.flush

    stdout.text("The effects of extinction.")
    stdout.text("Scatter plot of (Fcalc_ext-Fcalc)/sigma vs Fpred")
    w = ZERO
    y = ZERO
    do n=1,.n_refl
      x = abs(.F_calc(n))  * (ext(n) - ONE) * sign(ONE,real(.F_calc(n))) / .sigma(n)
      y = y + abs(x)
      w = w + abs( (ext(n) - ONE) / ext(n) )
      stdout.put(.F_pred(n))
      stdout.put(x)
      stdout.flush
    end
    stdout.flush
    y = y / .n_refl
    w = w / .n_refl
    stdout.text("The effects of extinction.")
    stdout.show("Average value of abs(Fcalc_ext-Fcalc)/sigma is ",y)
    stdout.show("Average value of abs(extinction correction) is ",w)
    stdout.flush

    stdout.text("The effects of extinction.")
    stdout.text("Scatter plot of (Fcalc_ext-Fcalc)/sigma vs sin(theta)/lambda")
    do n=1,.n_refl
      x = abs(.F_calc(n))  * (ext(n) - ONE) * sign(ONE,real(.F_calc(n))) / .sigma(n)
      stdout.put(stl(n))
      stdout.put(x)
      stdout.flush
    end

    stdout.flush
    ext.destroy
    stl.destroy
    z.destroy
  end

