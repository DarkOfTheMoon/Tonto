# define TWOTHIRD          0.66666666666666666667d0
# define TWOTHIRDS         0.66666666666666666667d0
# define FOURTHIRD         1.33333333333333333333d0
# define FOURTHIRDS        1.33333333333333333333d0
# define SIXTH             0.16666666666666666667d0
# define NINTH             0.11111111111111111111d0
