# define OR         .or.
# define NOT        .not.
# define FALSE      .false.
# define TRUE       .true.
# define EQV        .eqv.
# define NEQV       .neqv.

# define PTR        pointer
# define IN         intent(in)
# define OUT        intent(out)
# define INOUT      intent(inout)
# define PAR        parameter

