   hermitian_fold
      INT :: dim1,dim2,i,j
      dim1 = size(self,1)
      dim2 = size(self,2)
      ENSURE(dim1==dim2,"non-square matrix")
      do i = 1,dim1
         forall (j=1:i-1)
            self(i,j) = self(i,j)+conjg(self(j,i))
         end
         self(i,i) = real(self(i,i),kind=DBL_KIND)
      end
   end
      
