!*******************************************************************************
!                           Data changing routines
!*******************************************************************************

   set_indices(h,k,l)
   ! Set the reflection data from the vector.
     self :: target
     h,k,l :: VEC{INT}, IN
     ref :: REFLECTION*
     n :: INT
     do n=1,.n_refl
       ref => self(n)
       ref.h       = h(n)
       ref.k       = k(n)
       ref.l       = l(n)
     end
   end

   set_F_calc(F_calc)
   ! Set the reflection data from the vector.
     self :: target
     F_calc :: VEC{CPX}, IN
      n :: INT
     do n=1,.n_refl
       self(n).F_calc = F_calc(n)
     end
   end

   set_F_pred(F_pred)
   ! Set the reflection data from the vector.
     self :: target
     F_pred :: VEC{REAL}, IN
      n :: INT
     do n=1,.n_refl
       self(n).F_pred = F_pred(n)
       self(n).F2_pred = F_pred(n) * F_pred(n)
     end
   end

   set_F_exp(F_exp)
   ! Set the reflection data from the vector.
     self :: target
     F_exp :: VEC{REAL}, IN
      n :: INT
     do n=1,.n_refl
       self(n).F_exp = F_exp(n)
     end
   end

   set_F_sigma(F_sigma)
   ! Set the reflection data from the vector.
     self :: target
     F_sigma :: VEC{REAL}, IN
      n :: INT
     do n=1,.n_refl
       self(n).F_sigma = F_sigma(n)
     end
   end

   set_I_pred(I_pred)
   ! Set the reflection data from the vector.
     self :: target
     I_pred :: VEC{REAL}, IN
      n :: INT
     do n=1,.n_refl
       self(n).I_pred = I_pred(n)
     end
   end

   set_I_exp(I_exp)
   ! Set the reflection data from the vector.
     self :: target
     I_exp :: VEC{REAL}, IN
      n :: INT
     do n=1,.n_refl
       self(n).I_exp = I_exp(n)
     end
   end

   set_I_sigma(I_sigma)
   ! Set the reflection data from the vector.
     self :: target
     I_sigma :: VEC{REAL}, IN
      n :: INT
     do n=1,.n_refl
       self(n).I_sigma = I_sigma(n)
     end
   end

   set(ref)
   ! Set the reflection data from.
     self :: target
     ref :: VEC{REFLECTION}, target
     ref1,self1 :: REFLECTION*
      n :: INT
     do n=1,.n_refl
       self1 => self(n)
       ref1  => ref(n)
       self1.h       = ref1.h
       self1.k       = ref1.k
       self1.l       = ref1.l
       self1.F_exp   = ref1.F_exp
       self1.F_pred  = ref1.F_pred
       self1.F_calc  = ref1.F_calc
       self1.F_sigma = ref1.F_sigma
       self1.I_exp   = ref1.I_exp
       self1.I_pred  = ref1.I_pred
       self1.I_sigma = ref1.I_sigma
     end
   end

   scale_F_pred(fac)
   ! Scale the predicted structure factors
     self :: INOUT
     fac :: REAL, IN
      n :: INT
     do n=1,size(self)
       self(n).F_pred = self(n).F_pred * fac
     end
   end

   scale_F_calc(fac)
   ! Scale the calculated structure factors
     self :: INOUT
     fac :: REAL, IN
      n :: INT
     do n=1,size(self)
       self(n).F_calc = self(n).F_calc * fac
     end
   end

   scale_F_exp(fac)
   ! Scale the experimental structure factors
     self :: INOUT
     fac :: REAL, IN
      n :: INT
     do n=1,size(self)
       self(n).F_exp = self(n).F_exp * fac
     end
   end

   scale_F_sigma(fac)
   ! Scale the structure factor errors
     self :: INOUT
     fac :: REAL, IN
      n :: INT
     do n=1,size(self)
       self(n).F_sigma = self(n).F_sigma * fac
     end
   end

