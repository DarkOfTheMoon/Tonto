   ! The number of reflections
     self :: IN
     res :: INT
     res = size(self)
   end

   have_F_calc result (res) ::: pure
   ! Whether we have any calculated structure factors
     self :: IN
     res :: BIN
      n :: INT
     res = FALSE
     do n=1,size(self)
       if (abs(self(n).F_calc) > TOL(10)) then
         res = TRUE
         exit
       end
     end
   end

