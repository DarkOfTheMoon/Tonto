{
 
    slaterbasis_name= "Clementi-Roetti"
 
    CIF= {
       file_name= "urea.cif"
       data_block_name= "urea"
       CH_bond_length= 1.083 angstrom
       NH_bond_length= 1.009 angstrom
       OH_bond_length= 0.983 angstrom
    }
    process_CIF
 
 
    cluster= {
 
        fragment_geometry= {
           0.000000    5.280840    2.912580    !  C
           0.000000    5.280840    5.290190    !  O
           1.528270    6.809110    1.582710    !  N
           2.699460    7.980300    2.527320    !  H
           1.507960    6.788800    -0.323810    !  H
           -1.528270    3.752560    1.582710    !  N
           -2.699460    2.581380    2.527320    !  H
           -1.507960    3.772880    -0.323810    !  H
        } 
 
        generation_method= for_hirshfeld_surface
        atom_density_cutoff= 1.0e-8
 
        defragment= FALSE
 
        make_info
    }
 
 
    create_cluster
 
 
    put
 
 
    CX_surface= {
 
        kind= Stockholder_weight
        triangulation_method= recursive_marching_cube
        iso_value= 0.5
        big_interior= yes
        voxel_proximity_factor= 5.0
        minimum_scan_division= 1.0
        minimum_scan_level= 1
 
        plot_grid= {
           box_scale_factor= 0.75
           use_bounding_cube_and_axes
           desired_separation= 0.5
           put
        }
 
    }
 
    isosurface_plot
 
 
    CX_file_name= "urea_urea.cxs"
    put_CX_data 
 
 
    destroy_cluster
 
}
