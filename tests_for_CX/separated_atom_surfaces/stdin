{
 
    basis_set_kind= "Clementi-Roetti"
 
    CIF= {
       file_name= "n-alkanes.cif"
       data_block_name= "ZZZOFC04"
       CH_bond_length= 1.083 angstrom
       NH_bond_length= 1.009 angstrom
       OH_bond_length= 0.983 angstrom
    }
    process_CIF
 
 
    cluster= {
 
        fragment_geometry= {
           18.025190    5.400480    21.376949    !  C
           20.129810    5.795800    27.618059    !  H
           14.444680    9.949020    5.284520    !  H
           7.454740    9.066530    -10.231220    !  C
           3.885070    13.622630    -26.326750    !  H
        } 
 
        generation_method= for_hirshfeld_surface
        atom_density_cutoff= 1.0e-7
 
        defragment= FALSE
 
        make_info
    }
 
 
    create_cluster
 
 
    put
 
 
    CX_surface= {
 
        kind= Stockholder_weight
        triangulation_method= recursive_marching_cube
        iso_value= 0.5
        big_interior= yes
        voxel_proximity_factor= 5.0
        minimum_scan_division= 1.0
        minimum_scan_level= 1
 
        plotgrid= {
           box_scale_factor= 0.75
           use_bounding_cube_and_axes
           desired_separation= 0.2
           put
        }
 
    }
 
    isosurface_plot
 
 
    CX_file_name= "n-alkanes_ZZZOFC04.cxs"
    put_CX_data 
 
 
    destroy_cluster
 
}
