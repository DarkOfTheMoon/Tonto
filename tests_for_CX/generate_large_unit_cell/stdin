{
    ! TONTO input file for generating initial cluster
 
 
    CIF= {
       file_name= "mo7c.cif"
       data_block_name= "mo7c"
       CH_bond_length= 1.083 angstrom
       NH_bond_length= 1.009 angstrom
       OH_bond_length= 0.983 angstrom
    }
    process_CIF
 
    cluster= {
        fragment_geometry= {
           25.531120    5.462280    23.315571    !  U
        } 
        generation_method= unit_cell
        defragment= FALSE
        radius= 0 Angstrom
        make_info
        put
    }
    CX_file_name= "mo7c_mo7c.cxd"
    put_CX_data
 
}
